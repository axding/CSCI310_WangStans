<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapHomePage"
    android:id="@+id/map_home_page"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/gray"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/home"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginStart="260dp"
            android:src="@drawable/selected_home"
            android:background="@android:color/transparent"/>

        <ImageButton
            android:id="@+id/about"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:src="@drawable/about"
            android:background="@android:color/transparent"/>

        <ImageButton
            android:id="@+id/profile"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:src="@drawable/profile"
            android:background="@android:color/transparent"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/background"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/gray">

        <ScrollView
            android:id="@+id/scrollView4"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:id="@+id/reservations"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:clickable="true"
                android:orientation="vertical"
                tools:ignore="TouchTargetSizeCheck">

                <TextView
                    android:id="@+id/upcomingReservations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:drawableRight="@drawable/arrow"
                    android:drawablePadding="5dp"
                    android:text="Upcoming Reservations"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:textStyle="bold" />

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

    <View
        android:id="@+id/hsc"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="490dp"
        android:background="@android:color/transparent" />

    <View
        android:id="@+id/village"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="285dp"
        android:layout_marginTop="215dp"
        android:background="@android:color/transparent" />

    <View
        android:id="@+id/lyon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="260dp"
        android:background="@android:color/transparent" />

    <View
        android:id="@+id/racquetball"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="92dp"
        android:layout_marginTop="240dp"
        android:background="@android:color/transparent" />

    <View
        android:id="@+id/uac"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="280dp"
        android:background="@android:color/transparent" />

    <View
        android:id="@+id/track"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="455dp"
        android:background="@android:color/transparent" />

    <View
        android:id="@+id/idto1"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="75dp"
        android:background="@android:color/transparent" />

    <View
        android:id="@+id/idto2"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="75dp"
        android:background="@android:color/transparent" />

</RelativeLayout>